<h1><%= @post.id %></h1>
<ul>
  <li><%= @post.title %></li>
  <li><%= @post.content %></li>
</ul>

<table>
  <th>
  <td>id</td>
  <td>content</td>
  <td>user email</td>
  <td>action</td>
  </th>
  <% @comments.each do |comment| %>
    <tr>
      <td><%= comment.id %></td>
      <td><%= comment.content %></td>
      <td><%= comment.user.email %></td>
      <td><%= link_to 'edit', edit_post_comment_path(@post, comment) if comment.user == current_user %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'new', new_post_comment_path(@post) %>