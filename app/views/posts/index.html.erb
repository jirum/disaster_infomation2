<h1>Disaster Information</h1>
<table class="table">
  <thead>
  <tr>
    <th scope="col">Title</th>
    <th scope="col">Content</th>
    <th scope="col">Address</th>
  </tr>
  </thead>
  <tbody>
  <% @posts.each_with_index do |post, index| %>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.address %></td>
  <% end %>
  </tbody>
</table>

<%= link_to 'New', new_post_path %>